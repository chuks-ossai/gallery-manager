<!-- Start your project here-->
<div class="mt-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Upload an Image</h5>
            <form method="POST" action="/image" enctype="multipart/form-data" class="md-form">
                <div class="row">
                    <div class="file-field col-12">
                        <div class="btn btn-primary btn-sm float-left">
                            <span for="newImage">Choose file</span>
                            <input type="file" name="newImage" id="newImage">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- Material input -->
                    <div class="md-form col-12">
                        <input type="text" id="title" class="form-control" name="title">
                        <label for="title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="md-form col-12">
                        <textarea id="description" class="md-textarea form-control" rows="3"
                            name="description"></textarea>
                        <label for="description">Description</label>
                    </div>
                </div>
                <div class="row">
                    <div class="md-form col-12">
                        <button class="btn btn-info btn-block my-4 text-uppercase" id="submit-button" type="submit"><i
                                class="fa fa-cloud-upload "></i>Upload</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h4 class="card-title">Newest Images</h4>
            <h6 class="card-subtitle mb-2 text-muted">Panel subtitle</h6>
            <div class="row">
                {{#each images}}
                <div class="col-md-6 my-2">
                    <div class="card">
                        <img src="/public/upload/ {{filename}}" alt="{{title}}" class="card-img-top img-fluid">
                        <div class="card-body">
                            <h4 class="card-title"><a>{{title}}</a></h4>
                            <p class="card-text">{{description}}</p>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a href="/images/{{ uniqueId }}" class="btn btn-primary">View Details</a>
                                </div>
                                <div class="pt-4">
                                    <span class="mr-4"><i class="fa fa-eye"></i> &nbsp; {{views}}</span>
                                    <span><i class="fa fa-thumbs-up"></i> &nbsp; {{likes}}</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</div>