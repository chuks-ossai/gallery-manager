<div class="card text-center mt-3">
    <div class="card-header">
        <div class="row">
            <div class="col-11 align-left">
                <h4>{{image.title}}</h4>
            </div>
            <div class="col-1 delete-button">
                    <i class="fa fa-trash" data-id="{{ image.uniqueId }}"></i>
            </div>
        </div>

    </div>
    <div class="card-body">
        <p class="card-text align-left">{{image.description}}</p>
        <div class="col-md-12 text-center">
            <img src="/uploads/temp/{{image.filename}}" class="img-thumbnail img-fluid">
        </div>
    </div>
    <div class="card-footer text-muted">
        <div class="row">
            <div class="col-sm-12 col-md-8">
                <div class="row">
                    <div class="col-sm-4">
                        <button class="btn btn-sm btn-unique text-uppercase btn-block" id="btn-like" data-id="{{image.uniqueId}}">
                            <i class="fa fa-thumbs-up"></i>&nbsp; &nbsp; Like
                        </button>
                    </div>
                    <div class="col-sm-4">
                        <span class="likes-count">{{image.likes}}</span>
                        &nbsp; - &nbsp; <i class="fa fa-eye"></i> <span>{{ image.views }}</span>
                    </div>
                    <div class="col-sm-4">
                        <span class="font-weight-bold">Posted:</span>
                        <span class="text-muted font-italic">{{ timeago image.timestamp }}</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <a href="/" class="btn btn-sm btn-outline-primary d-flex justify-content-center d-md-table mx-auto"><i class="fa fa-arrow-left"></i>&nbsp; &nbsp; Back</a>
            </div>
        </div>
    </div>
</div>
<div class="card mt-3">
    <div class="card-header">
        <div class="row">
            <div class="col-7">
                <h4 class="panel-title">Comments</h4>
            </div>
            <div class="col-5">
                <button class="btn btn-unique btn-sm" id="btn-comment" data-id="{{image.uniqueId}}" data-toggle="modal"
                    data-target="#modalCommentForm"><i class="fa fa-comments"></i>&nbsp; &nbsp;
                    Post Comment...</button>

            </div>
        </div>
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            {{#each comments}}
            <li class="list-group-item row">
                <div class="row">
                    <div class="col-2">
                        <a class="pull-left" href="#"> <img class="media-object rounded-circle img-fluid"
                                src={{gravatar}}> </a>
                    </div>
                    <div class="col-10">
                        <h5>{{comment}}</h5>
                        <div>
                            <span class="media-heading">{{ name }}</span>
                            <small class="text-muted">{{ timeago timestamp }}</small>
                        </div>

                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="modal fade" id="modalCommentForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="POST" action="/images/{{image.uniqueId}}/comment">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Write to us</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">

                    <div class="md-form mb-5">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" id="name" class="form-control validate" name="name">
                        <label data-error="wrong" data-success="right" for="name">Your name</label>
                    </div>

                    <div class="md-form mb-5">
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="email" id="email" class="form-control validate" name="email">
                        <label data-error="wrong" data-success="right" for="email">Your email</label>
                    </div>

                    <div class="md-form">
                        <i class="fas fa-pencil prefix grey-text"></i>
                        <textarea type="text" id="comment" class="md-textarea form-control" rows="4"
                            name="comment"></textarea>
                        <label data-error="wrong" data-success="right" for="comment">Your
                            message</label>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-unique text-uppercase"><i class="fa fa-comment "></i>&nbsp;
                        &nbsp;
                        Post</button>
                </div>
            </div>
        </form>
    </div>
</div>