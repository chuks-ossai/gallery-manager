<div class="card mt-3">
    <div class="card-heading">
        <h4 class="card-title">Latest Comments</h4>
    </div>
    <div class="card-body">
        <ul class="media-list">
            {{#each sidebar.comments}}
            <li class="media">
                <a class="pull-left" href="/images/{{ image.uniqueId }}">
                    <img class="media-object" width="45" height="45" src="/public/upload/{{ image.filename }}">
                </a>
                <div class="media-body">{{comment}}<br />
                    <strong class="media-heading">{{name}}</strong>
                    <small class="text-muted">{{timeago timestamp }}</small>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>