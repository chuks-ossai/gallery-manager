<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title">Latest Comments</h5>
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            {{#each comments}}
            <li class="list-group-item row">
                <div class="row">
                    <div class="col-2">
                        <a class="pull-left" href="#"> <img class="media-object rounded-circle img-fluid"
                                src={{gravatar}}> </a>
                    </div>
                    <div class="col-10">
                        <h5>{{comment}}</h5>
                        <div>
                            <span class="media-heading">{{ name }}</span>
                            <small class="text-muted">{{ timeago timestamp }}</small>
                        </div>

                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>